@using CarRental.Dto.ContactDtos
@model List<ResultContactDto>
@{
    ViewData["Title"] = "İletişim Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@* public int ContactID { get; set; }
        public string Name { get; set; }
        public string Email { get; set; }
        public string Subject { get; set; }
        public string Message { get; set; } *@

@{
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Email</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Aksiyonlar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Message</td>
            <td>
                <a asp-action="UpdateContact" asp-controller="Contact" asp-route-id="@item.ContactID" asp-area="Admin" class="btn btn-outline-info">Güncelle</a>
                <a asp-action="DeleteContact" asp-controller="Contact" asp-route-id="@item.ContactID" asp-area="Admin" class="btn btn-outline-Danger">Sil</a>
            </td>
        </tr>
    }

</table>
<br />
<a asp-action="CreateContact" asp-controller="Contact" asp-area="Admin" class="btn btn-outline-primary">Yeni İletişim Ekle</a>