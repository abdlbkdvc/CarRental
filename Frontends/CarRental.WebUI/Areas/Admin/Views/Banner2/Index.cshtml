@using CarRental.Dto.Banner2Dtos

@model List<ResultBanner2Dto>
@{
    ViewData["Title"] = "Banner2 Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@* Banner2ID
Discount
Title
Description
PhotoUrl *@
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>İndirim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Fotoğraf Url</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Discount</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.PhotoUrl" style="height:75px;width:75px;" /></td>
            <td>
                <a asp-action="UpdateBanner2" asp-controller="Banner2" asp-route-id="@item.Banner2ID" asp-area="Admin" class="btn btn-outline-info">Güncelle</a>
                <a asp-action="DeleteBanner2" asp-controller="Banner2" asp-route-id="@item.Banner2ID" asp-area="Admin" class="btn btn-outline-Danger">Sil</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateBanner2" asp-controller="Banner2" asp-area="Admin" class="btn btn-outline-primary">Yeni Banner2 Ekle</a>