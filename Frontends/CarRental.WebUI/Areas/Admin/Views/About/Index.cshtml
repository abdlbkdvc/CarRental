@using CarRental.Dto.AboutDtos

@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Hakkımda Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Fotoğraf Url</th>
        <th>Açıklama</th>
        <th>İkon Url1</th>
        <th>İkon Başlık1</th>
        <th>İkon Url2</th>
        <th>İkon Başlık2</th>
        <th>İkon Url3</th>
        <th>İkon Başlık3</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px;" /></td>
            <td>@item.Description</td>
            <td><img src="@item.IconUrl1" style="height:75px;width:75px;" /></td>
            <td>@item.IconTitle1</td>
            <td><img src="@item.IconUrl2" style="height:75px;width:75px;" /></td>
            <td>@item.IconTitle2</td>
            <td><img src="@item.IconUrl3" style="height:75px;width:75px;" /></td>
            <td>@item.IconTitle3</td>
            <td>
                <a asp-action="UpdateAbout" asp-controller="About" asp-route-id="@item.AboutID" asp-area="Admin" class="btn btn-outline-info">Güncelle</a>
                <a asp-action="DeleteAbout" asp-controller="About" asp-route-id="@item.AboutID" asp-area="Admin" class="btn btn-outline-Danger">Sil</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateAbout" asp-controller="About" asp-area="Admin" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>