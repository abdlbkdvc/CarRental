@using CarRental.Dto.TestimonialDtos
@model CreateTestimonialDto
@{
    ViewData["Title"] = "Yeni Takdirname Oluştur Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
