    <span asp-validation-for="ClientJob" class="text-danger"></span>
    <br />
    <label>Müşteri Yorum</label>
    <input type="text" asp-for="ClientComment" class="form-control" />
    <span asp-validation-for="ClientComment" class="text-danger"></span>
    <br />
