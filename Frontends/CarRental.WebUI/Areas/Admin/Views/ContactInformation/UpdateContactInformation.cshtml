@using CarRental.Dto.ContactDtos
@model UpdateContactDto
@{
    ViewData["Title"] = "Yeni Araba Detayı Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //     Name
    //     Email
    // Subject
    // Message
}
<form method="post">
    <input type="hidden" asp-for="ContactID" />
    <label>Ad</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Email</label>
    <input type="text" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />
    <label>Konu</label>
    <input type="text" asp-for="Subject" class="form-control" />
    <span asp-validation-for="Subject" class="text-danger"></span>
    <br />
    <label>Mesaj</label>
    <input type="text" asp-for="Message" class="form-control" />
    <span asp-validation-for="Message" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>
