@using CarRental.Dto.ServiceDtos

@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Servis Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*       public int ServiceID { get; set; }
        public string ServiceTitle { get; set; }
        public string IconUrl { get; set; }
        public string IconTitle { get; set; }
        public string IconDescription { get; set; } *@
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İkon Url</th>
        <th>İkon Başlık</th>
        <th>İkon Açıklama</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.ServiceTitle</td>
            <td><img src="@item.IconUrl" style="height:75px;width:75px;" /></td>
            <td>@item.IconTitle</td>
            <td>@item.IconDescription</td>
            <td>
                <a asp-action="UpdateService" asp-controller="Service" asp-route-id="@item.ServiceID" asp-area="Admin" class="btn btn-outline-info">Güncelle</a>
                <a asp-action="DeleteService" asp-controller="Service" asp-route-id="@item.ServiceID" asp-area="Admin" class="btn btn-outline-Danger">Sil</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateService" asp-controller="Service" asp-area="Admin" class="btn btn-outline-primary">Yeni Servis Ekle</a>