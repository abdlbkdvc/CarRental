@using CarRental.Dto.AboutDtos
<!-- About Start -->
@model List<ResultAboutDto>
@foreach (var item in Model)
{
    <div class="container-fluid py-5">
        <div class="container pt-5 pb-3">
            <h1 class="display-4 text-uppercase text-center mb-5">Welcome To <span class="text-primary"></span></h1>
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <img class="w-75 mb-4" src="@item.ImageUrl" alt="">
                    <p>@item.Description</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4 mb-2">
                    <div class="d-flex align-items-center bg-light p-4 mb-4" style="height: 150px;">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary ml-n4 mr-4" style="width: 100px; height: 100px;">
                            <i class="@item.IconUrl1"></i>
                        </div>
                        <h4 class="text-uppercase m-0">@item.IconTitle1</h4>
                    </div>
                </div>
                <div class="col-lg-4 mb-2">
                    <div class="d-flex align-items-center bg-secondary p-4 mb-4" style="height: 150px;">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary ml-n4 mr-4" style="width: 100px; height: 100px;">
                            <i class="@item.IconUrl2"></i>
                        </div>
                        <h4 class="text-light text-uppercase m-0">@item.IconTitle2</h4>
                    </div>
                </div>
                <div class="col-lg-4 mb-2">
                    <div class="d-flex align-items-center bg-light p-4 mb-4" style="height: 150px;">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary ml-n4 mr-4" style="width: 100px; height: 100px;">
                            <i class="@item.IconUrl3"></i>
                        </div>
                        <h4 class="text-uppercase m-0">@item.IconTitle3</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<!-- About End -->
