@using CarRental.Dto.ServiceDtos

@model List<ResultServiceDto>
@{
    int count = 1;
}

<!-- Services Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <h1 class="display-1 text-primary text-center">02</h1>
        <h1 class="display-4 text-uppercase text-center mb-5">Servislerimiz</h1>
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="service-item d-flex flex-column justify-content-center px-4 mb-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="d-flex align-items-center justify-content-center bg-primary ml-n4" style="width: 80px; height: 80px;">
                                <i class="@item.IconUrl"></i>
                            </div>
                            <h1 class="display-2 text-white mt-n2 m-0">Servis @count++;</h1>
                        </div>
                        <h4 class="text-uppercase mb-3">@item.IconTitle</h4>
                        <p class="m-0">@item.IconDescription</p>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Services End -->
