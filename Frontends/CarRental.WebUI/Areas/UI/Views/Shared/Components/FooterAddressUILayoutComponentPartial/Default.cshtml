@using CarRental.Dto.FooterAddressDtos

@model List<ResultFooterAddressDto>
@foreach (var item in Model)
{
    <div class="container-fluid bg-secondary py-5 px-sm-3 px-md-5" style="margin-top: 90px;">
        <div class="row pt-5">
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-uppercase text-light mb-4">İletişim Kur</h4>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-white mr-3"></i>@item.Location</p>
                <p class="mb-2"><i class="fa fa-phone-alt text-white mr-3"></i>@item.PhoneNumber</p>
                <p><i class="fa fa-envelope text-white mr-3"></i>@item.Email</p>
                <h6 class="text-uppercase text-white py-2">Bizi Takip Edin</h6>
                <div class="d-flex justify-content-start">
                    <a class="btn btn-lg btn-dark btn-lg-square mr-2" href="@item.TwitterUrl"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-lg btn-dark btn-lg-square mr-2" href="@item.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-lg btn-dark btn-lg-square mr-2" href="@item.LinkedInUrl"><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-lg btn-dark btn-lg-square" href="@item.InstagramUrl"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-uppercase text-light mb-4">Kullanışlı Linkler</h4>
                <div class="d-flex flex-column justify-content-start">
                    <a class="text-body mb-2" href="#"><i class="fa fa-angle-right text-white mr-2"></i>Anasayfa</a>
                    <a class="text-body mb-2" href="#"><i class="fa fa-angle-right text-white mr-2"></i>Hakkımızda</a>
                    <a class="text-body mb-2" href="#"><i class="fa fa-angle-right text-white mr-2"></i>Servisler</a>
                    <a class="text-body mb-2" href="#"><i class="fa fa-angle-right text-white mr-2"></i>Araçlar</a>
                    <a class="text-body mb-2" href="#"><i class="fa fa-angle-right text-white mr-2"></i>Sayfalar</a>
                    <a class="text-body" href="#"><i class="fa fa-angle-right text-white mr-2"></i>İletişim</a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-uppercase text-light mb-4">Araba Galerisi</h4>
                <div class="row mx-n1">
                    <div class="col-4 px-1 mb-2">
                        <a href=""><img class="w-100" src="@item.CarGalleryPhotoUrl1" alt=""></a>
                    </div>
                    <div class="col-4 px-1 mb-2">
                        <a href=""><img class="w-100" src="@item.CarGalleryPhotoUrl2" alt=""></a>
                    </div>
                    <div class="col-4 px-1 mb-2">
                        <a href=""><img class="w-100" src="@item.CarGalleryPhotoUrl3" alt=""></a>
                    </div>
                    <div class="col-4 px-1 mb-2">
                        <a href=""><img class="w-100" src="@item.CarGalleryPhotoUrl4" alt=""></a>
                    </div>
                    <div class="col-4 px-1 mb-2">
                        <a href=""><img class="w-100" src="@item.CarGalleryPhotoUrl5" alt=""></a>
                    </div>
                    <div class="col-4 px-1 mb-2">
                        <a href=""><img class="w-100" src="@item.CarGalleryPhotoUrl6" alt=""></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h4 class="text-uppercase text-light mb-4">Haber bülteni</h4>
                <p class="mb-4">Bize Ulaşmak Bir Tık Uzakta</p>
                <div class="w-100 mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control bg-dark border-dark" style="padding: 25px;" placeholder="Email Hesabınız">
                        <div class="input-group-append">
                            <button class="btn btn-primary text-uppercase px-3">Üye Olmak</button>
                        </div>
                    </div>
                </div>
                <i>Üyelik İçin Email Adresinizi Giriniz.</i>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark py-4 px-sm-3 px-md-5">
        <p class="mb-2 text-center text-body">&copy; <a href="#">Car Rental</a>. Bütün Hakları Saklıdır.</p>
        <p class="m-0 text-center text-body">Abdulbaki Tarafından Yapıldı || @DateTime.Now.Year <a href="https://htmlcodex.com">HTML Codex</a></p>
    </div>

}