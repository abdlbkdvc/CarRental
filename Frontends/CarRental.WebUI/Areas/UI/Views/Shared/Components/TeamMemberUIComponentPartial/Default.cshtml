@using CarRental.Dto.TeamMemberDtos

@model List<ResultTeamMemberDto>
<!-- Team Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="display-1 text-primary text-center">04</h1>
        <h1 class="display-4 text-uppercase text-center mb-5">Takımımız</h1>
        <div class="owl-carousel team-carousel position-relative" style="padding: 0 30px;">
            @foreach (var item in Model)
            {
                <div class="team-item">
                    <img class="img-fluid w-100" src="@item.PhotoUrl" alt="">
                    <div class="position-relative py-4">
                        <h4 class="text-uppercase">@item.MemberName</h4>
                        <p class="m-0">@item.MemberJob</p>
                        <div class="team-social position-absolute w-100 h-100 d-flex align-items-center justify-content-center">
                            <a class="btn btn-lg btn-primary btn-lg-square mx-1" href="@item.TwitterUrl"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-lg btn-primary btn-lg-square mx-1" href="@item.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-lg btn-primary btn-lg-square mx-1" href="@item.InstagramUrl"><i class="fab fa-instagram-in"></i></a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Team End -->
