@using CarRental.Dto.ContactDtos
<!-- Contact Start -->
@model ResultContactDto

<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <h1 class="display-1 text-primary text-center">06</h1>
        <h1 class="display-4 text-uppercase text-center mb-5">Bizimle İletişime Geç</h1>
        <div class="row">
            <div class="col-lg-7 mb-2">
                <div class="contact-form bg-light mb-4" style="padding: 30px;">
                    <form method="post" action="Contact" asp-controller="FirstPage" asp-area="UI">
                        <div class="row">
                            <div class="col-6 form-group">
                                <input type="text" class="form-control p-4" placeholder="İsminiz" asp-for="Name">
                            </div>
                            <div class="col-6 form-group">
                                <input type="email" class="form-control p-4" placeholder="Email" asp-for="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control p-4" placeholder="Konu" asp-for="Subject">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control py-3 px-4" rows="5" placeholder="Mesaj" asp-for="Message"></textarea>
                        </div>
                        <div>
                            <button class="btn btn-outline-primary py-3 px-5">Mesajı Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
            @await Component.InvokeAsync("ContactInformationComponentPartial")
        </div>
    </div>
</div>
<!-- Contact End -->

